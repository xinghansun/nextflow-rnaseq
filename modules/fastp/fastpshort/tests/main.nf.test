nextflow_process {

    name "Test Process fastp_short"
    script "../main.nf"
    process "fastp_short"

    test("Test single end inputs") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                input[0] = Channel.of([
                    "ENCSR000COQ1", 
                    file("${projectDir}/data/tests/ENCSR000COQ1_1.fastq.gz")
                    ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.trimmed_reads).match()
        }

    }

    test("Test paired end inputs") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                // define inputs of the process here. Example:
                // input[0] = file("test-file.txt")
                input[0] = Channel.of([
                    "ENCSR000COQ1", 
                    [
                        file("${projectDir}/data/tests/ENCSR000COQ1_1.fastq.gz"),
                        file("${projectDir}/data/tests/ENCSR000COQ1_2.fastq.gz"),
                    ]
                    ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.trimmed_reads).match()
        }

    }

}
